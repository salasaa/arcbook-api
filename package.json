{
  "name": "arcbook-api",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun install",
    "start": "bun run src/index.ts",
    "docker:up": "docker compose up -d",
    "db:up": "docker compose up -d",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "prestart": "bun prisma generate",
    "db:gen": "prisma generate --no-hints",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio --browser none",
    "db:reset": "prisma migrate reset --skip-seed",
    "deploy": "bun prisma migrate deploy && bun db:seed"
  },
  "prisma": {
    "seed": "bun prisma/seed.ts"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.3",
    "@prisma/client": "^6.16.3",
    "@scalar/hono-api-reference": "^0.9.21",
    "@types/node": "^24.6.0",
    "argon2": "^0.44.0",
    "hono": "^4.9.9",
    "prisma": "^6.16.3",
    "typescript": "^5.9.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
